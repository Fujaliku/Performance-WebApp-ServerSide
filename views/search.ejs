<% include partials/head %>
<% include partials/header %>

<section name="search">

    <h1>Search GIFs</h1>

    <div>
        <form id="search-form" method="POST" action="/search">
            <input id="input" name="query" type="text" value="<%= user_query.query %>" required placeholder="Search GIFs on Gyphy...">
            <input id="search" type="submit" value="Search"></input>
        </form>

    </div>

    <hr>

    <% if (items) { %>
        <div id="result-bar">
            <p>Search results:</p>
            <div id="sort-icons">
                <p>Display style:</p>
                <a href="#"><i id="grid-icon" class="fa fa-th-large active" aria-hidden="true"></i></a>
                <a href="#"><i id="row-icon" class="fa fa-bars" aria-hidden="true"></i></a>
            </div>
        </div>
        <div id="searchresults">
                <% items.forEach(function (item) { %>
                    <a href="/details/<%=item.id%>">
                        <!--<img src="<%=item.images.fixed_height.url%>" alt="Powered By Giphy!">-->
                        <video autoplay="autoplay" loop="loop">
                            <source src="<%= item.images.fixed_height.mp4%>" type="video/mp4" />
                        </video>
                    </a>
                <%})%>
        </div>
    <% }%>


</section>

<% include partials/footer %>